<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5 py-4" style="background: #ffffff; border-radius: 10px;">
    <h3 class="text-center">Add Your Clinic</h3>
    <!-- Updated form with name and method POST -->
    <form action="/clinic/admin/addclinic" id="addClinicForm" name="clinicForm" method="POST" class="row g-3">
        <div class="col-md-6">
            <label for="clinicName" class="form-label">Clinic Name</label>
            <input type="text" class="form-control" id="clinicName" name="clinicName" placeholder="Enter clinic name"
                required>
        </div>
        <div class="col-md-6">
            <label for="ownerEmail" class="form-label">Owner Email</label>
            <input type="email" class="form-control" id="ownerEmail" name="ownerEmail" placeholder="Enter owner email"
                required>
        </div>
        <div class="col-md-6">
            <label for="ownerPhoneNumber" class="form-label">Owner Email</label>
            <input type="text" class="form-control" id="ownerPhoneNumber" name="ownerPhoneNumber"
                placeholder="Enter owner Phone Number" required>
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Add Clinic</button>
        </div>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>