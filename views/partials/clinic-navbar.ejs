<div>

    <!-- Success Message -->
    <% if (success_msg.length> 0) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert"
            style="display: flex; justify-content: space-between; align-items: center; margin: 1rem 20px;">
            <%= success_msg %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"
                    style="background:  none !important;">
                    <i class="ri-close-line" style="font-size: 18px;  color: red;"></i>
                </button>
        </div>
        <% } %>

            <!-- Error Message -->
            <% if (error_msg.length> 0) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert"
                    style="display: flex; justify-content: space-between; align-items: center; margin: 1rem 20px;">
                    <%= error_msg %>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"
                            style="background:  none !important;">
                            <i class="ri-close-line" style="font-size: 18px;  color: red;"></i>
                        </button>
                </div>
                <% } %>



                    <nav class="navbar navbar-expand-lg navbar-light bg-light"
                        style="position: static; top: 0; width: 100%; z-index: 9;">
                        <div class="container-fluid">
                            <!-- Title on the left -->
                            <a class="navbar-brand" href="/clinic/<%=clinic._id%>"
                                style="font-size: 20px; font-family: semiBold;">
                                <%=clinic.clinicName%>
                            </a>

                            <!-- Toggler for mobile view -->
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                                data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
                                aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>

                            <!-- Right-side items -->
                            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                                <ul class="navbar-nav" style="display: flex; gap: 40px;">
                                    <!-- Dropdown with hover effect -->
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                            data-bs-toggle="dropdown" aria-expanded="false">
                                            Meet
                                        </a>
                                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                            <li><a class="dropdown-item" href="/clinic/<%=clinic._id%>/aboutus">
                                                    About Us </a></li>
                                            <li><a class="dropdown-item" href="/clinic/<%=clinic._id%>/news">News</a>
                                            </li>

                                            <li><a class="dropdown-item"
                                                    href="/clinic/<%=clinic._id%>/contactus">Contact Us</a></li>

                                        </ul>
                                    </li>


                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                            data-bs-toggle="dropdown" aria-expanded="false">
                                            Services
                                        </a>
                                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                            <li><a class="dropdown-item" href="#">Dental Cleaning</a></li>
                                            <li><a class="dropdown-item" href="#">Teeth Whitening</a></li>
                                            <li><a class="dropdown-item" href="#">Braces</a></li>
                                        </ul>
                                    </li>

                                    <li><a class="dropdown-item" href="/clinic/<%=clinic._id%>/beforeafter">Before &
                                            After</a></li>

                                    <!-- Location icon -->
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">
                                            <i class="ri-map-pin-line"></i>
                                        </a>
                                    </li>

                                    <!-- Contact Us button -->
                                    <li class="nav-item">
                                        <a class="btn btn-contact ms-3"
                                            style="background: rgb(68, 104, 126); color: #fff !important;" href="#">Book
                                            Online</a>
                                    </li>



                                </ul>
                            </div>
                        </div>
                    </nav>











                    <form action="/patient/clinic/submitted-form/<%=clinic._id%>" method="POST" class="clinicNavbar">
                        <div id="toggleForm"
                            style="width: 100%;position: fixed; top: -9.4%; background: rgb(68, 104, 126); padding: 10px 20px; right: 0; width: fit-content; display: flex; align-items: center; justify-content: space-between; color: #fff; gap: 10px; letter-spacing: 1px; cursor: pointer;">
                            <span>Contact us</span>
                            <span><i class="ri-arrow-up-s-fill"></i></span>
                        </div>
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="name" name="name" required
                                placeholder="Full Name">
                        </div>

                        <!-- Phone -->
                        <div class="mb-3">
                            <label for="phone" class="form-label">Phone</label>
                            <input type="text" class="form-control" id="phone" name="phone" required
                                placeholder="Phone Number">
                        </div>

                        <!-- City -->
                        <div class="mb-3">
                            <label for="city" class="form-label">City</label>
                            <input type="text" class="form-control" id="city" name="city" required
                                placeholder="City you live">
                        </div>

                        <!-- Message -->
                        <div class="mb-3">
                            <label for="message" class="form-label">Message</label>
                            <textarea class="form-control" id="message" name="message" rows="4" required
                                placeholder="Write your message..."></textarea>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-primary"
                            style="width: 100%;  font-size: 20px;">Submit</button>
                    </form>


</div>



